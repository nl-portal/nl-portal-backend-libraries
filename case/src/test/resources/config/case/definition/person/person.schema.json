{
    "$id": "person.schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "description": "The person's first name.",
            "maxLength": 15
        },
        "age": {
            "description": "Age in years which must be equal to or greater than zero.",
            "type": "integer",
            "minimum": 0
        },
        "birthday": {
            "description": "Birthday",
            "type": "string",
            "format": "date"
        },
        "isCool": {
            "description": "is cool",
            "type": "boolean"
        }
    },
    "additionalProperties": false
}